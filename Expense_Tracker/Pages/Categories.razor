@page "/categories";
@using Expense_Tracker.Service;
@using Expense_Tracker.Data.Models;
@inject CategoryService service;


<h3>Categories</h3>
<ul>
	<ul>
		@foreach (var category in service.GetCategories())
		{
			<li>@category.Name</li>
			<button @onclick="()=>deleteCategosy(category.Id)">Add new category</button>
		}
	</ul>
</ul>
<input @bind="userInput"/>
<button @onclick="NewCategory">Add new category</button>
@code {


	private string userInput;


	//public List<Category> categories = new List<Category>()
	//{
	//	new Category { Id = 1, Name = "Food" },
	//	new Category { Id = 2, Name = "House" },
	//	new Category { Id = 3, Name = "Entertainment" }
	//};
	public void NewCategory()
	{

		service.AddUser(new Category { Name = userInput });
	}
	public void deleteCategosy(int id)
	{
		service.DeleteUser(id);

	}

}
