

<div class="col-xl-3 col-lg-3">
	<div class="card card-stats mb-4 mb-xl-0">
		<div class="card-body">
			<div class="row">
				<div class="col">
					<h5 class="card-title text-uppercase text-muted mb-0">@name</h5>
					@if (@value > 0)
					{
						<span class="h2 font-weight-bold mb-0 text-center text-success">@value lei</span>
					}
					else
					{
						<span class="h2 font-weight-bold mb-0 text-center text-danger">@value lei</span>
					}
				</div>
			</div>

		</div>
	</div>
</div>


@code {
	[Parameter]
	public string name { set; get; }

	[Parameter]
	public int value { set; get; }
}
